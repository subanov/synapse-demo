{
	"name": "CopyDataFlow",
	"properties": {
		"folder": {
			"name": "Demo"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "CopyDataSource",
						"type": "DatasetReference"
					},
					"name": "SqlServerTable"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "CopyDataDestination",
						"type": "DatasetReference"
					},
					"name": "ParquetDestination",
					"rejectedDataLinkedService": {
						"referenceName": "CopyDataStorage",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [],
			"scriptLines": [
				"parameters{",
				"     partitionBy as string,",
				"     outputFilename as string",
				"}",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> SqlServerTable",
				"SqlServerTable sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'parquet',",
				"     filePattern:(concat($outputFilename, '[n].parquet')),",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     saveOrder: 1,",
				"     partitionBy('key',",
				"          0,",
				"          $partitionBy",
				"     )) ~> ParquetDestination"
			]
		}
	}
}